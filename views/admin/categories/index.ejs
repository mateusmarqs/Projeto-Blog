<%- include("../../partials/header.ejs") %>
<body>
    <%- include("../../partials/navbar.ejs") %>
    <br>
    <div class="container">
        <h2>Categorias</h2>
        <table class="table table-bordered">
            <thead>
                <th>ID</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Ações</th>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                <tr>
                    <th> <%= category.id %></th>
                    <th> <%= category.title %></th>
                    <th> <%= category.slug %></th>
                    <th></th>
                </tr>                                               
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
